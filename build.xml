<?xml version="1.0"?>
<project name="fax" basedir="." default="build">
   <property name="src.dir" value="src"/>
   <property name="web.dir" value="C:\\srujan\\ant\\FacebookLeads"/>
   <property name="build.dir" value="${web.dir}/WEB-INF/classes"/>
   
   <property name="name" value="fax"/>

   <path id="master-classpath">
      <fileset dir="${web.dir}/WEB-INF/lib">
         <include name="*.jar"/>
      </fileset>
      <pathelement path="${build.dir}"/>
   </path>

   <target name="build" description="Compile source tree java files">
      <mkdir dir="${build.dir}"/>
      <javac destdir="${build.dir}" source="1.5" target="1.5">
         <src path="${src.dir}"/>
         <classpath refid="master-classpath"/>
      </javac>
   </target>
 
   <target name="clean" description="Clean output directories">
      <delete>
         <fileset dir="${build.dir}">
            <include name="**/*.class"/>
         </fileset>
      </delete>
   </target>
   
   <target name="buildjar" description ="build jar">
   <jar destfile="${web.dir}/WEB-INF/lib/fbLead.jar" basedir = "${src.dir}" includes="${build.dir}/WEB-INF/lib/**">
   <manifest>
   <attribute name="Main-Class" value ="com.sbsa.leads.main.LeadGenerationClient"/>
   </manifest>
   </jar>
   </target>
   
   <target name="build-war">

   <war destfile="lead.war" webxml="${web.dir}/web.xml">
      <fileset dir="${web.dir}/WebContent">
         <include name="**/*.*"/>
      </fileset>
      
      <lib dir="C:\\srujan\\ant\\FacebookLeads\\WebContent\\WEB-INF\\lib">
         <exclude name="fbLead.jar"/>
      </lib>
      
      <classes dir="${src.dir}"/>
   </war>
   
</target>


<target name = "deploy" depends = "buildjar" description = "Deploy application">
      <copy todir = "C:\\srujan" preservelastmodified = "true">

         <fileset dir = "${web.dir}/WEB-INF/lib">
            <include name = "fbLead.jar"/>
         </fileset>

      </copy>
   </target>
 </project>